build:
  runs-on: <%= ubuntu_version %>
  steps:
  - uses: actions/checkout@v2
  - name: Set Node.js 12.x
    uses: actions/setup-node@v2
    with:
      node-version: 12.x
  - name: "Install"
    run: |
      yarn install
  - name: "Lint"
    run: |
      yarn lint
  - name: "Test"
    run: |
      yarn test
  - name: "build"
    run: |
      yarn package
